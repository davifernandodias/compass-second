{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["POSTGRES_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "POSTGRES_URL"],
      "outputs": [".dist/**", "!.next/cache/**"]  
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
